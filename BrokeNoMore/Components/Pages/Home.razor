@page "/"
@rendermode InteractiveServer

<PageTitle>BrokeNoMore</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">BrokeNoMore Dashboard</h1>
        <div class="text-end">
            <small class="text-muted">Current Balance</small>
            <h3 class="mb-0 text-success">€@_balance.ToString("F2")</h3>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-center">Spending by Category</h5>
                    <div style="height: 250px;">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-center">Monthly Overview</h5>
                    <div style="height: 250px;">
                        <canvas id="monthlyChart"></canvas>
                    </div>
                    <div class="text-center mt-3">
                        <small class="text-muted">Income: <span class="text-success fw-bold">€@GetMonthlyData().income.ToString("F2")</span></small><br/>
                        <small class="text-muted">Expense: <span class="text-danger fw-bold">€@GetMonthlyData().expense.ToString("F2")</span></small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-center">Yearly Overview</h5>
                    <div style="height: 250px;">
                        <canvas id="yearlyChart"></canvas>
                    </div>
                    <div class="text-center mt-3">
                        <small class="text-muted">Income: <span class="text-success fw-bold">€@GetYearlyData().income.ToString("F2")</span></small><br/>
                        <small class="text-muted">Expense: <span class="text-danger fw-bold">€@GetYearlyData().expense.ToString("F2")</span></small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="mb-0" style="cursor: pointer;" @onclick="() => _showBudgets = !_showBudgets">
                    Budgets <span>@(_showBudgets ? "−" : "+")</span>
                </h3>
                <button class="btn btn-primary" @onclick="ShowAddBudgetForm">+ Add Budget</button>
            </div>

            @if (_showBudgets)
            {

            @if (_showBudgetForm)
            {
                <div class="card mb-3 bg-light">
                    <div class="card-body">
                        <h5 class="card-title">@(_editingBudget != null ? "Edit" : "Add") Budget</h5>
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" @bind="_budgetName" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Limit</label>
                                <input type="number" class="form-control" @bind="_budgetLimit" step="0.01" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Start Date</label>
                                <input type="date" class="form-control" @bind="_budgetStart" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">End Date</label>
                                <input type="date" class="form-control" @bind="_budgetEnd" />
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-success" @onclick="SaveBudget">Save</button>
                                <button class="btn btn-secondary ms-2" @onclick="CancelBudgetForm">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Limit</th>
                            <th>Period</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var budget in ReadBudgets())
                        {
                            <tr>
                                <td>@budget.Name</td>
                                <td class="fw-bold">€@budget.Limit.ToString("F2")</td>
                                <td>@budget.PeriodStartDate.ToString("yyyy-MM-dd") to @budget.PeriodEndDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => EditBudget(budget)">Edit</button>
                                    <button class="btn btn-sm btn-outline-danger ms-1" @onclick="() => DeleteBudgetConfirm(budget.Id)">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            }
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Recent Transactions</h3>
        <div class="d-flex gap-2">
            <input type="text" class="form-control" placeholder="Search by ID" @bind="_searchId" @bind:event="oninput" @onkeyup="SearchTransactions" style="width: 200px;" />
            <button class="btn btn-primary" @onclick="ShowAddForm">+ Add Transaction</button>
        </div>
    </div>

    @if (_showForm)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">@(_editingTransaction != null ? "Edit" : "Add") Transaction</h5>
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Type</label>
                        <select class="form-select" @bind="_formType">
                            <option value="expense">Expense</option>
                            <option value="income">Income</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Amount</label>
                        <input type="number" class="form-control" @bind="_formAmount" step="0.01" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Category</label>
                        <select class="form-select" @bind="_formCategory">
                            <option value="">Select...</option>
                            @foreach (var cat in ReadCategories())
                            {
                                <option value="@cat">@cat</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Date & Time</label>
                        <input type="datetime-local" class="form-control" @bind="_formTimestamp" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Budget</label>
                        <select class="form-select" @bind="_formBudgetId">
                            <option value="">None</option>
                            @foreach (var budget in ReadBudgets())
                            {
                                <option value="@budget.Id">@budget.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-control" @bind="_formDescription" />
                    </div>
                    <div class="col-md-12">
                        <button class="btn btn-success" @onclick="SaveTransaction">Save</button>
                        <button class="btn btn-secondary ms-2" @onclick="CancelForm">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th class="text-end">Amount</th>
                    <th>Currency</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Budget</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in GetPagedTransactions())
                {
                    <tr>
                        <td><small>@transaction.Id</small></td>
                        <td>@transaction.Timestamp.ToString("yyyy-MM-dd HH:mm")</td>
                        <td><span class="badge bg-@(transaction.Type == "income" ? "success" : "danger")">@transaction.Type</span></td>
                        <td class="@(transaction.Amount >= 0 ? "text-success" : "text-danger") fw-bold text-end">@transaction.Amount.ToString("F2")</td>
                        <td>@transaction.Currency</td>
                        <td>@transaction.Category</td>
                        <td>@transaction.Description</td>
                        <td>@GetBudgetName(transaction.BudgetId)</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => EditTransaction(transaction)">Edit</button>
                            <button class="btn btn-sm btn-outline-danger ms-1" @onclick="() => DeleteTransactionConfirm(transaction)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(_currentPage == 1 ? "disabled" : "")">
                <button class="page-link" @onclick="PreviousPage">Previous</button>
            </li>
            @if (_currentPage > 3)
            {
                <li class="page-item">
                    <button class="page-link" @onclick="() => GoToPage(1)">1</button>
                </li>
                <li class="page-item disabled"><span class="page-link">...</span></li>
            }
            @for (int i = Math.Max(1, _currentPage - 2); i <= Math.Min(GetTotalPages(), _currentPage + 2); i++)
            {
                var pageNum = i;
                <li class="page-item @(_currentPage == pageNum ? "active" : "")">
                    <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                </li>
            }
            @if (_currentPage < GetTotalPages() - 2)
            {
                <li class="page-item disabled"><span class="page-link">...</span></li>
                <li class="page-item">
                    <button class="page-link" @onclick="() => GoToPage(GetTotalPages())">@GetTotalPages()</button>
                </li>
            }
            <li class="page-item @(_currentPage == GetTotalPages() ? "disabled" : "")">
                <button class="page-link" @onclick="NextPage">Next</button>
            </li>
        </ul>
    </nav>
</div>